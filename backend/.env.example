# ============================================================================
# GoldVenture Platform - Backend Environment Variables
# ============================================================================
# Copy this file to .env and fill in your actual values.
#
# SECURITY NOTES:
# - NEVER commit .env to Git (it's in .gitignore)
# - Generate secrets with: openssl rand -base64 50
# - Generate passwords with: openssl rand -base64 32
# - Rotate all keys quarterly or immediately if compromised
# - In production, use a secrets manager (AWS Secrets Manager, Vault, etc.)
# ============================================================================

# Django Core Settings
SECRET_KEY=CHANGE_ME_generate_with_openssl_rand_base64_50
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database (PostgreSQL)
DB_NAME=goldventure_db
DB_USER=postgres
DB_PASSWORD=CHANGE_ME_generate_with_openssl_rand_base64_32
DB_HOST=localhost
DB_PORT=5432

# CORS
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Redis (required in production for Celery + WebSockets)
REDIS_URL=redis://localhost:6379/0

# Security (production only)
SECURE_SSL_REDIRECT=False

# Email
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=
DEFAULT_FROM_EMAIL=Junior Mining Intelligence <noreply@juniorminingintelligence.com>
ADMIN_EMAIL=admin@example.com
NI43101_NOTIFICATION_EMAIL=notifications@example.com
FINANCING_NOTIFICATION_EMAIL=notifications@example.com

# API Keys
ANTHROPIC_API_KEY=CHANGE_ME_get_from_anthropic_console
ALPHA_VANTAGE_API_KEY=CHANGE_ME_get_from_alphavantage
TWELVE_DATA_API_KEY=CHANGE_ME_get_from_twelvedata

# AWS S3 (for document storage)
AWS_ACCESS_KEY_ID=CHANGE_ME_get_from_aws_iam
AWS_SECRET_ACCESS_KEY=CHANGE_ME_get_from_aws_iam
AWS_STORAGE_BUCKET_NAME=goldventure-documents
AWS_S3_REGION_NAME=us-east-1

# Stripe (for payments)
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=
STRIPE_WEBHOOK_SECRET=
STRIPE_STORE_WEBHOOK_SECRET=

# Voyage AI (for embeddings)
VOYAGE_API_KEY=

# DigitalOcean (for GPU orchestrator - production only)
DO_API_TOKEN=
DO_SSH_KEY_ID=

# Admin API Token (set on server, use via $ADMIN_API_TOKEN)
ADMIN_API_TOKEN=
