# GoldVenture Platform - Backend Environment Variables
# Copy this file to .env and fill in your actual values

# Django Core Settings
SECRET_KEY=django-insecure-CHANGE-THIS-IN-PRODUCTION
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/goldventure

# CORS
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Redis (leave empty for development)
REDIS_URL=

# Security (production only)
SECURE_SSL_REDIRECT=False

# Email
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@juniorminingintelligence.com

# API Keys
ANTHROPIC_API_KEY=your-anthropic-api-key
ALPHA_VANTAGE_API_KEY=your-alpha-vantage-api-key
TWELVE_DATA_API_KEY=your-twelve-data-api-key

# AWS S3 (optional)
USE_S3=False
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_STORAGE_BUCKET_NAME=
AWS_S3_REGION_NAME=us-east-1
