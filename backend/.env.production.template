# Django Core Settings
SECRET_KEY=CHANGE_ME_generate_with_openssl_rand_base64_50
DEBUG=False
ALLOWED_HOSTS=juniorminingintelligence.com,www.juniorminingintelligence.com,api.juniorminingintelligence.com

# Database (Production PostgreSQL)
DB_NAME=goldventure_prod
DB_USER=dbuser
DB_PASSWORD=CHANGE_ME_generate_with_openssl_rand_base64_32
DB_HOST=localhost
DB_PORT=5432

# CORS
CORS_ALLOWED_ORIGINS=https://juniorminingintelligence.com,https://www.juniorminingintelligence.com

# Redis (Required for production)
REDIS_URL=redis://localhost:6379/0

# Security
SECURE_SSL_REDIRECT=True

# Email (SendGrid Web API - NOT SMTP)
# Project uses SendGrid Web API, not SMTP. Set your SendGrid API key here.
EMAIL_HOST_PASSWORD=CHANGE_ME_get_sendgrid_api_key_starting_with_SG
DEFAULT_FROM_EMAIL=Junior Mining Intelligence <noreply@juniorminingintelligence.com>

# API Keys
ANTHROPIC_API_KEY=CHANGE_ME_get_from_anthropic_console
ALPHA_VANTAGE_API_KEY=CHANGE_ME_get_from_alphavantage
TWELVE_DATA_API_KEY=CHANGE_ME_get_from_twelvedata

# AWS S3 (for document storage)
AWS_ACCESS_KEY_ID=CHANGE_ME_get_from_aws_iam
AWS_SECRET_ACCESS_KEY=CHANGE_ME_get_from_aws_iam
AWS_STORAGE_BUCKET_NAME=goldventure-documents
AWS_S3_REGION_NAME=us-east-1

# Admin API Token
ADMIN_API_TOKEN=CHANGE_ME_generate_with_openssl_rand_base64_50